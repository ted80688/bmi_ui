<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="20" Width="400">
            <Canvas Width="400" Height="50" Background="LightGray">

                <Border x:Name="Height" CornerRadius="20" Background="Orange"  Canvas.Left="0">
                    <TextBlock x:Name="HeightText" Canvas.Top="0" Canvas.Left="0" Width="80" Height="30" TextAlignment="Center" Padding="0 5">100</TextBlock>
                </Border>
            </Canvas>
            <Slider Minimum="50" Maximum="250" x:Name="HeightSlider" ValueChanged="HeightSlider_ValueChanged"></Slider>
            <TextBlock x:Name="WeightText">100</TextBlock>
            <Slider Minimum="50" Maximum="200" x:Name="WeightSlider" ValueChanged="WeightSlider_ValueChanged"></Slider>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="40" x:Name="bminumber1">29</TextBlock>
                <TextBlock FontSize="20" x:Name="bminumber2" Margin="0 8 0 0">.5</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
